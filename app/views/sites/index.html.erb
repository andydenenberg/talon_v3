<head>
  <meta charset="utf-8">
	<meta http-equiv="refresh" content="60">
  <title>Demo</title>
</head>
<div class="container">

  <div class="content">
    <div class="page-header">
		<h2>Monitored Sites</h2>
    </div>

<table class="zebra-striped">
  <tr>
    <th>Url</th>
    <th>Interval</th>
    <th>Active</th>
    <th>Content</th>
    <th>Watcher</th>
	<th>ID:</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.url %></td>
    <td><%= site.interval %></td>
    <td><%= site.active %></td>
    <td><%= site.content %></td>
    <td><%= site.watcher %></td>
	<td><%= site.id %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

